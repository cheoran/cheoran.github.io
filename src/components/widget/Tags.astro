---

import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import { getTagList } from "../../utils/content-utils";
import { getTagUrl } from "../../utils/url-utils";
import ButtonTag from "../control/ButtonTag.astro";
import WidgetLayout from "./WidgetLayout.astro";

const tags = await getTagList();

const COLLAPSED_HEIGHT = "8rem";

const hasTags = tags.length > 0;
const isCollapsed = hasTags;

interface Props {
	class?: string;
	style?: string;
}
const className = Astro.props.class;
const style = Astro.props.style;
---
<WidgetLayout
    name={i18n(I18nKey.tags)}
    id="tags"
    isCollapsed={isCollapsed}
    collapsedRows={3}
    collapsedHeight={COLLAPSED_HEIGHT}
    expandGapClass="mt-2"
    collapseGapClass="mt-2"
    class={className}
    style={style}
>
    {hasTags ? (
        <div class="flex gap-2 flex-wrap">
            {tags.map(t => (
                <ButtonTag href={getTagUrl(t.name)} label={`View all posts with the ${t.name.trim()} tag`}>
                    {t.name.trim()}
                </ButtonTag>
            ))}
        </div>
    ) : (
        <div class="text-50 text-sm font-medium">{i18n(I18nKey.noTags)}</div>
    )}
</WidgetLayout>
